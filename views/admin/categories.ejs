<!-- Header section -->
<%- include("partials/header") %>

<body>

    <div id="wrapper">

      <%- include("partials/nav") %>  

        <div id="page-wrapper">

            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            
                            <small>Author</small>
                        </h1>
                        
                      
                    </div>
                    <!-- Add a new category -->
                    <div class="col-lg-6">
                      <form action="/add_category" method="POST">
                        <div class="form-group">
                          <label>Add New Category</label>
                          <input type="text" name="category" placeholder="Category" class="form-control">
                        </div>
                        <div class="form-group">
                          <button class="btn btn-success" name="btn_category" type="submit">
                          Add Category
                        </button>
                        </div>
                        
                      </form>
                        
                    </div>
                    
                    <div class="col-lg-6">
                      <table class="table table-bordered">
                        <tr>
                          <th>Category ID</th>
                          <th>Category Name</th>
                        </tr>
                        
                        <%
                        if(userData.length!=0){
                          
                          userData.forEach(function(data){
                        %>
                        <tr>
                          <td><%=data.cat_id%></td>
                          <td><%=data.cat_title%></td>
                        </tr>
                        <% 
                          }) 
                        }
                        %>
                        
                        
                      </table>  
                    </div>
                  </div>
                </div>
                <!-- /.row -->
              </div>
            <!-- /.container-fluid -->

          </div>
          <!-- /#page-wrapper -->


        <%- include("partials/footer") %>        