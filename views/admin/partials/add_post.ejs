
   

       

            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="row">
                    <div class="col">
                      <!-- Add a new category -->
                    <!--<div class="col-lg-6">-->
                      <form action="/add_post" method="POST">
                        <div class="form-group">
                          <label>Post Title</label>
                          <input type="text" name="post_title" placeholder="Post Title" class="form-control">
                        </div>
                        <!--<div class="form-group">
                          <label>Post Category ID</label>
                          <input type="text" name="post_cat_id" placeholder="Post Category ID" class="form-control">
                        </div>-->
                        <div>
                          <select name="post_cat_id" class="form-control">
                            <%
                            if(categories.length!=0){
                              Object.keys(categories).forEach((key) => {
                            %>     
                                <option value=<%=categories[key].cat_id%>><%=categories[key].cat_title%></option>
                            <%
                              });
                            }
                            %>
                          </select>
                        </div>
                        <div class="form-group">
                          <label>Post Author</label>
                          <input type="text" name="post_author" placeholder="Post Author" class="form-control">
                          <input type="hidden" name="categories" value=<%=categories%></input>
                        </div>
                        <div class="form-group">
                          <label>Post Status</label>
                          <input type="text" name="post_status" placeholder="Post Status" class="form-control">
                        </div>
                        <div class="form-group">
                          <label>Image</label>
                          <input type="file" name="image_name" placeholder="Post Author" class="form-control">
                        </div>
                        <div class="form-group">
                          <label>Post Tags</label>
                          <input type="text" name="post_tags" placeholder="Post Tags" class="form-control">
                        </div>
                        <div class="form-group">
                          <label>Post Content</label>
                          <textarea name="post_content" id="" cols="30" rows="10" class="form-control"></textarea>
                        </div>
                        <div class="form-group">
                          <button class="btn btn-success" name="btn_category" type="submit">
                          Add Post
                        </button>
                        </div>
                        <div>
                          <p class="alert alert-danger">
                            <%- userMessage %> 
                          </p>
                            
                          
                        </div>
                        
                        
                      </form>
                      
                    
                    </div>
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->

      
       