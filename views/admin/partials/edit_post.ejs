
   

       <% if (postToEdit!=null) {
       %>
            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="row">
                    <div class="col">
                      <!-- Add a new category -->
                    <!--<div class="col-lg-6">-->
                      <form action="/edit_post?post=postToEdit" method="POST">
                        <div class="form-group">
                          <label>Post Title</label>
                          <input type="text" name="post_title" placeholder="Post Title" value=<%=postToEdit.post_title%> class="form-control">
                        </div>
                        <div class="form-group">
                          <select name="cat_name" class="form-control">
                            <%
                            if(categories.length!=0){
                              Object.keys(categories).forEach((key) => {
                            %>     
                                <option value=<%=categories[key].cat_id%>><%=categories[key].cat_title%></option>
                            <%
                              });
                            }
                            %>
                          </select>
                        </div>
                        <div class="form-group">
                          <label>Post Author</label>
                          <input type="text" name="post_author" placeholder="Post Author" value=<%=postToEdit.post_author%> class="form-control">
                        </div>
                        <div class="form-group">
                          <label>Post Status</label>
                          <!--<input type="text" name="post_status" placeholder="Post Status" value=<%=postToEdit.post_status%> class="form-control">-->
                          <select name="post_status" class="form-control">
                            <option value=<%=postToEdit.post_status%>><%=postToEdit.post_status%></option>
                            <%
                            if (postToEdit.post_status=="Published") {
                            %>
                              <option value="Draft">Draft</option>
                            <%
                            } else {
                            %>
                              <option value="Published">Published</option>
                            <%
                            }
                            %>
                          </select>
                        </div>
                        <div class="form-group">
                          <label>Image</label>
                          <input type="file" name="image_name" placeholder="Post Author" value=<%=postToEdit.post_author%> class="form-control">
                        </div>
                        <div class="form-group">
                          <label>Post Tags</label>
                          <input type="text" name="post_tags" placeholder="Post Tags" value=<%=postToEdit.post_tags%> class="form-control">
                        </div>
                        <div class="form-group">
                          <label>Post Content</label>
                          <textarea name="post_content" id="editor" cols="30" rows="10" class="form-control"><%=postToEdit.post_content%></textarea>
                          <input type="hidden" name="post" value="<%=postToEdit.post_id%>">
                        </div>
                        <div class="form-group">
                          <button class="btn btn-success" name="btn_category" type="submit">
                          Edit Post
                        </button>
                        </div>
                        <div>
                          <p class="alert alert-danger">
                            <%- userMessage %> 
                          </p>
                            
                          
                        </div>
                        
                        
                      </form>
                      
                    
                    </div>
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->

      
      <% 
      } else {
      %>
        <h2>No post specified  </h2>    
      <%
       }
      %>