<!-- This is a static file -->
<!-- served from your routes in server.js -->
<!-- Header section -->
<%- include("partials/header") %>
    <!-- Navigation -->
    <%- include("partials/nav") %>

    <!-- Page Content -->
    <div class="container">

        <div class="row">
           <!-- Blog Entries Column -->
            <div class="col-md-8">
             <%
              
              if(userPosts.length!=0){
                
                userPosts.forEach(function(posts){
                  post_id = posts.post_id;
                  post_title = posts.post_title;
                  post_author = posts.post_author;
                  post_date = posts.post_date;
                  post_img = posts.post_img;
                  post_content = posts.post_content;
                  post_tags = posts.post_tags;


              %>
              

                <h1 class="page-header">
                    Page Heading
                    <small>Secondary Text</small>
                </h1>

                <!-- First Blog Post -->
                <h2>
                    <a href="/post?id=<%=post_id%>"><%=post_title%></a>
                </h2>
                <p class="lead">
                    by <a href="index.php"><%=post_author%></a>
                </p>
                <p><span class="glyphicon glyphicon-time"></span> Posted on <%=post_date%></p>
                <hr>
              
                <a href="post?id=<%=post_id%>"><img class="img-responsive" src=<%=post_img%> alt=""></a>
                <hr>
                <p><%-post_content%></p>and<%=sess.db_user_role%>
                <a class="btn btn-primary" href="post?id=<%=post_id%>">Read More <span class="glyphicon glyphicon-chevron-right"></span></a>

                <hr>

                
                

           
              <%  });} else { %> <br><br><br>
              
              <h1><div class="alert alert-danger">There are no posts under this category at present</div></h1> <%
            
          } %>
          </div>
            <%- include("partials/side_bar") %>

        <hr>

        <!-- Footer -->
        <%- include("partials/footer") %>

      <!-- include the Glitch button to show what the webpage is about and
            to make it easier for folks to view source and remix -->
      <div class="glitchButton" style="position:fixed;top:2em;right:20px;"></div>
      <script src="https://button.glitch.me/button.js"></script>

    
